---
import { Icon } from "astro-icon";

interface Props {
  href: string;
  icon: string;
}

const { href, icon } = Astro.props;
---

<a
  class="flex flex-col items-center gap-1 font-RobotoCondensed text-sm font-bold uppercase hover:underline"
  href={href}
>
  <Icon name={icon} class="w-4" />
  <slot />
</a>
