---
interface Props {
  href: string
}

const { href } = Astro.props;
---
<a class="font-RobotoCondensed font-bold underline uppercase hover:text-highlight-light hover:no-underline dark:hover:text-highlight-dark transition-colors ease delay-100 sm:text-lg lg:text-xl xl:text-3xl" href={href}>
  <slot />
</a>