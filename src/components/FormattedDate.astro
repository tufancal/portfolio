---
interface Props {
  date: Date;
  classNames?: string[];
}

const { date, classNames } = Astro.props;
---

<time class={classNames ? classNames.join(' ') : ''} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("de-DE", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
